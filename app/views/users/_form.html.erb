<%= form_with model: @user do |form| %>
	<p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :user_address %><br>
    <%= form.text_field :u_address, placeholder: "Enter your adress", id: :autocomplete_address %>
  </p>
  <p>
    <%= form.label :town %><br>
    <%= form.text_field :town, id: :town %>
  </p>
  <p>
    <%= form.label :area %><br>
    <%= form.text_field :area, id: :area %>
  </p>
  <p>
    <%= form.label :country %><br>
    <%= form.text_field :country, id: :country %>
  </p>
  <p>
    <%= form.label :postal_code %><br>
    <%= form.number_field :postal_code, id: :posta %>
  </p>
	<p>
    <%= form.submit%>
  </p>
<% end %>

<%= link_to "Back", users_path %>

