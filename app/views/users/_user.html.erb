<table>
  <tr>
    <th>Name</th>
    <th>U Address</th>
    <th>Town</th>
    <th>Area</th>
    <th>Country</th>
    <th>Postal Code</th>
    <th colspan="3"></th>
  </tr>
  <% @users.each do |user| %>  
    <tr>
      <td><%= user.name %></td>
      <td><%= user.u_address%></td>
      <td><%= user.town %></td>
      <td><%= user.area %></td>
      <td><%= user.country %></td>
      <td><%= user.postal_code %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
          method: :delete,data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
